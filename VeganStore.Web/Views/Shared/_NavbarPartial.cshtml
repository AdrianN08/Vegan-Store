@inject SignInManager<AppUser> SignInManager

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index"><i class="bi bi-flower1"></i> VeganStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Product" asp-action="Index">Alla Produkter</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">Kategorier</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Product" asp-action="ProductCategory" asp-route-category="Ekologiskt">Ekologiskt</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="ProductCategory" asp-route-category="Mejeri">Mejeri</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="ProductCategory" asp-route-category="Skafferi">Skafferi</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="ProductCategory" asp-route-category="Godis">Godis</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="ProductCategory" asp-route-category="Snacks">Snacks</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="ProductCategory" asp-route-category="Läsk">Läsk</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="ProductCategory" asp-route-category="Kosttillskott">Kosttillskott</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index"><i class="bi bi-cart4"></i></a>
                        </li>
                    </ul>
                </div>

                <ul class="navbar-nav d-flex justify-content-end">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                           <i class="bi bi-person-circle"></i> Mina Sidor
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Index">Mina Uppgifter</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Orders" >Beställningar</a></li>                          
                        </ul>
                    </div>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Auth" asp-action="_SignOut">Logga ut</a>
                    </li>
                </ul>
            }
            else
            {
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Product" asp-action="Index">Alla Produkter</a>
                        </li>
                    </ul>
                </div>

                <ul class="navbar-nav justify-content-end flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Auth" asp-action="SignUp">Registrera</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Auth" asp-action="SignIn">Logga in</a>
                    </li>
                </ul>
            }
        </div>
    </nav>
</header>